<p class="mb-5">
    Found <%= pluralize(@platforms.count, 'platform') %> when searching for: <%= params[:keywords] %>
</p>
<div class="columns is-multiline">
    <% @platforms.each do |p| %>
    <div class="column is-one-quarter">
        <div>
        <%= link_to "#{p.name}", p %>
        </div>
    </div>
    <% end %>
</div>